<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mt-2">Nova postagem</button></a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body mt-2">
            <h4>Título : {{titulo}}</h4>
            <small>Slug: {{slug}}</small>
            <h5>Descrição: {{descricao}}</h5>
            <p>Conteúdo: {{conteudo}}</p>
            <small>{{categoria}}</small><br>
            <small>Data: {{data}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">Deletar postagem</button>
            </form>
        </div>
    </div>



{{else}}
    <h4>Nenhuma postagem registrada</h4>
    <hr>
{{/each}}